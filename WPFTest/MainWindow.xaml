					</TabItem>
				</TabControl>
			</Grid>

			<!--Vertical Separator-->
			<!--https://stackoverflow.com/questions/13584998/how-to-add-a-vertical-separator-->
			<StackPanel Grid.Column="1" Orientation="Horizontal">
				<Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,0,0" Background="Gray"/>
			</StackPanel>
			<StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
				<Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,0,0" Background="Gray"/>
			</StackPanel>

			<!--Right Grid-->
			<Grid Grid.Column="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="4*"/>
					<RowDefinition Height="2*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<!--Window Control-->
				<Rectangle x:Name="toprightDragToMove" MouseLeftButtonDown="DragToMove_LMouseDown" Fill="#00000000"/>
				<StackPanel Grid.Column="1">
					<Button x:Name="buttonMaxorRestore" Template="{DynamicResource ButtonTemplate1}" Content="Maximize&#xA;Restore" Margin="20,10,10,2" Click="buttonMaxorRestore_Click" Background="{x:Null}" BorderBrush="#FF83B3FF" Foreground="White" MinHeight="33" MinWidth="66" ToolTip="Maximize or Restore the window."/>
					<Button x:Name="buttonMini" Template="{DynamicResource ButtonTemplate1}" Content="Minimize" Margin="40,0,10,2" Click="buttonMini_Click" Background="{x:Null}" BorderBrush="#FF83B3FF" Foreground="White" MinHeight="18" MinWidth="60" ToolTip="Minimize the window."/>
					<Button x:Name="buttonExit" Template="{DynamicResource ButtonTemplate1}" Content="Close" Margin="60,0,10,2" Click="buttonExit_Click" Background="{x:Null}" BorderBrush="#FF83B3FF" Foreground="White" MinHeight="18" MinWidth="40" ToolTip="Close the window."/>
					<Separator Margin="0,10,0,0"/>
				</StackPanel>

				<Button Template="{DynamicResource ButtonTemplate1}" x:Name="saveButton" Content="Save" Grid.Row="2" Background="{x:Null}" BorderBrush="#FF83B3FF" Foreground="White" Margin="12,12,12,12" MinHeight="30" MinWidth="40" ToolTip="Save the file in specified path (Overwrite)." Click="saveButton_Click"/>
				<Label Grid.Row="1" x:Name="savedLabel" Content="File Saved!" Foreground="Lime" HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="0,0,0,0" Visibility="Hidden"/>
			</Grid>


		</Grid>

	</Border>
</Window>
